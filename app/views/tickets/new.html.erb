<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="md:flex md:items-center md:justify-between md:space-x-4 xl:border-b xl:pb-6">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">New Ticket</h2>
      <p class="mt-2 text-sm text-gray-500">Create a new ticket for <%= @project.title %></p>
    </div>
  </div>

  <div class="mt-8">
    <%= form_with(model: [@project, @ticket], local: true, class: "space-y-6") do |form| %>
      <div>
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-input", placeholder: "Enter ticket title" %>
      </div>

      <div>
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, rows: 4, class: "form-input", placeholder: "Describe the ticket..." %>
      </div>

      <div>
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status, 
          options_for_select([
            ["To Do", "to_do"],
            ["In Progress", "in_progress"],
            ["Done", "done"]
          ]), 
          {}, 
          class: "form-input" 
        %>
      </div>

      <div>
        <%= form.label :priority, class: "form-label" %>
        <%= form.select :priority,
          options_for_select([
            ["Low", "low"],
            ["Medium", "medium"],
            ["High", "high"]
          ]),
          {},
          class: "form-input"
        %>
      </div>

      <div class="flex items-center justify-end space-x-4 pt-4">
        <%= link_to "Cancel", project_tickets_path(@project), class: "btn-secondary" %>
        <%= form.submit "Create Ticket", class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>